<%- include ('../partials/head')%>

  <body style="min-width: 372px;">
      <%- include ('../partials/nav')%>

    <main class="container ">
        <form method="GET" action="/changePassword">
          <div class="card mx-auto" style="width: 30rem;">
            <div class="text-center">
              <h3>Perfil do usuário</h3>
            </div>
            <div class="text-center">
              <i class="bi bi-person-circle" style="font-size: 2em"></i>
            </div>
            <div class="card-body">
              <h5 class="card-title">Nome: <%= name %></h5>
              <h5 class="card-title">Email: <%= email %></h5>
              <h5 class="card-title">Endereço: <%= adresse %></h5>
            </div>
            <button class="btn btn-primary btn-md mx-auto mb-2" type="submit">Alterar senha</button>
          </div>
        </form>

        
      </main>


      <%- include ('../partials/footer')%>
    <%- include ('../partials/scripts')%>
  </body>

  </html>