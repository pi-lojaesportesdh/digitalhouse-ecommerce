<%- include ('../partials/head.ejs') %>

  <body class="min-width: 372px">
    <%- include ('../partials/nav') %>
      <h1 class="text-center text-uppercase">
        Alterar produto
      </h1>
      <main class="container">
        <div class="d-flex justify-content-center">
          <form class="mb-5 formUpdateProduct" enctype="multipart/form-data" method="POST">
            <div class="col">
                <div class="card-title text-uppercase">
                  <strong>id do produto: <%= productById.id %></strong>
                </div>
                 <input type="hidden" id="custId" name="idToUrl" value="<%= productById.id %>">

                <label for="validationCustom01" class="form-label"><strong>Atualize o nome do produto:</strong></label>
                <input type="text" name="nameProduct" class="form-control" id="validationCustom01" value="<%= productById.name %>"
                  placeholder="Digite o nome do produto" required>
                <label for="validationTextarea" class="form-label pt-3"><strong>Atualize a descrição:</strong></label>
                <textarea class="form-control" name="descProduct" id="validationTextarea" value=""
                  placeholder="Descrição do seu produto" style="width:100%" required><%= productById.description %></textarea>
                <label for="validationCustom01" class="form-label pt-3"><strong>Atualize o valor:</strong></label>
                <input type="text" name="valueProduct" class="form-control" id="validationCustom01" value="<%= productById.price %>"
                  placeholder="Digite o valor do produto, ex: 000.00" required>               
                <div class="custon-upload">
                  <label for="formFile" class="form-label pt-3"><strong>Atualize a imagem do produto:</strong></label>
                  <input class="form-control" name="imgProduct" type="file" id="formFile">
                </div>
              <div class="row justify-content-center gap-3 pt-5">
                <button class="btn btn-lg btn-primary" style="width:45%" type="submit">
                  <i class="bi bi-arrow-clockwise">Atualizar Produto</i>
                </button>
              </form>

              <form method="POST" action="" class="formExclude">
                <div class="d-flex justify-content-center">
                <button class="btn btn-sm btn-danger " style="width:45%" type="submit" href="/adminUpdate/<%= productById.id %>">
                  <i class="bi bi-trash3-fill mt-3" style="font-size: 1.5rem">Excluir Produto</i>
                </button>
              </div>
              <div class="row justify-content-center gap-3 pt-5 mb-5">
                <a class="btn btn-outline-warning btn-lg" style="width:45%" href="adminProduct">Cancelar</a>
              </div>
            </div>
            </div>
            </form>
      </main>

      <hr class="mb-5">
      <%- include ('../partials/footer') %>
      <script src="../../../js/api/apiDeleteProduct.js"></script>
      <script src="../../../js/api/apiUpdateProduct.js"></script>
        <%- include ('../partials/scripts') %>
  </body>