<%- include partials/head%>

  <body style="min-width: 372px;">
    <nav>
      <%- include partials/nav%>
    </nav>

    <main>
        <div class="container">
            <h1 class="row justify-content-center mb-3">Entre em Contato</h1>
            <div class="row justify-content-center">
                <form action="" class="col-sm-10 col-md-8 col-lg-6">
                    <div class="form-floating mb-3">
                        <label for="txtNome" class="form-label">Nome:</label>
                        <input type="text" placeholder="Nome completo" class="form-control" id="textNome" required>
                      </div>
                      <div class="form-floating mb-3">
                        <label for="txtEmail" class="form-label">E-mail:</label>
                        <input type="email" placeholder="Seu e-mail" class="form-control" id="txtEmail" required>
                      </div>
                      <div class="form-floating mb-3">
                        <label for="txtMensagem" class="form-label" required>Mensagem:</label>
                        <textArea class="form-control" id="txtMensagem" placeholder="Digite aqui sua mensagem.." style="height: 200px"></textArea>
                      </div>
                      <button class="btn btn-lg btn-danger" type="button" onclick="window.location.href='contactConfirm'">Enviar Mensagem</button>
                      <p class="mt-3">
                        Faremos o nosso melhor para responder sua mensagem em até 2 dias úteis.
                      </p>
                      <p class="mt-3">
                        Atenciosamente,<br>
                        Central de relacionamento <strong>DH-Sports</strong>.
                      </p>
                </form>
            </div>
    </main>

    <footer>
      <%- include partials/footer%>
    </footer>
    <%- include partials/scripts%>
  </body>

  </html>