<%- include ('partials/head')%>
  <body style="min-width: 372px;">
      <%- include ('partials/nav')%>
    <main>
        <div class="container">
            <h1 class="row justify-content-center mb-3">Entre em Contato</h1>
            <div class="row justify-content-center">
              <%- include ('partials/errorMsg')%>
                <form action="contactConfirm" method="POST" class="col-sm-10 col-md-8 col-lg-6">
                    <div class="form-floating mb-3">
                      <input type="text" name="nome" placeholder="Nome completo" class="form-control" id="textNome" >
                        <label for="txtNome" class="form-label">Nome:</label>
                      </div>
                      <div class="form-floating mb-3">
                        <input type="email" name="email" placeholder="Seu e-mail" class="form-control" id="txtEmail" >
                        <label for="txtEmail" class="form-label">E-mail:</label> 
                      </div>
                      <div class="form-floating mb-3">
                        <textArea class="form-control" name="mensagem" id="txtMensagem" placeholder="Digite aqui sua mensagem.." style="height: 200px"></textArea>
                        <label for="txtMensagem" class="form-label" required>Mensagem:</label>
                      </div>
                      <button class="btn btn-lg btn-danger" type="submit">Enviar Mensagem</button>
                      <p class="mt-3">
                        Faremos o nosso melhor para responder sua mensagem em até 2 dias úteis.
                      </p>
                      <p class="mt-3">
                        Atenciosamente,<br>
                        Central de relacionamento <strong>DH-Sports</strong>.
                      </p>
                </form>
            </div>
    </main>

    <%- include ('partials/footer')%>
    <%- include ('partials/scripts')%>
  </body>

  </html>