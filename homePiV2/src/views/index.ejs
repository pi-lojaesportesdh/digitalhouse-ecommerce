<%- include ('partials/head') %>

  <body class="min-width: 375px">
    <%- include ('partials/nav') %>
      

        <main class="container mb-5">
          <%- include ('partials/header') %>
          <div class="row justify-content-center pb-5 mx-auto" id="produtoContainer">
            <% for(let i=0; i < produtos.length; i++) {%>
              <div class="me-5 pb-3 col-sm-8 col-md-4 col-lg-2">
                <div class="card" id="card-product" style="width: 200px">
                  <img src="..." class="card-img-top" alt="...">
                  <div class="card-body text-center">
                    <h5 class="card-title">
                      <%= produtos[i].name %>
                    </h5>
                    <p class="card-value">
                      <strong>R$: <%= produtos[i].price %>
                      </strong> 
                    </p>
                    <p class="card-text">
                      <%= produtos[i].description %>.
                    </p>
                    <p class="card-id">
                      <%= produtos[i].id %>.
                    </p>
                    <button class="btn btn-primary" type="submit" id="buyProduct" onclick="addToCart({
                                    id: <%= produtos[i].id %>,
                                    title: '<%= produtos[i].name %>',
                                    price: <%= produtos[i].price %>,
                                    description: '<%= produtos[i].description %>'
                                  })">
                      Comprar
                    </button>
                  </div>
                </div>
              </div>
              <% }%>
          </div>
        </main>





        <hr class="mb-5">
        <!-- Functions - carrinho -->
        <script 
          src="../../../js/functions/shoopingCart.js">
        </script>
        <%- include ('partials/footer') %>
          <%- include ('partials/scripts') %>
  </body>